
%header.header
  %p グループを作成しました
  
.right-content
  .content-heading
    %p.main-group-name 
      =@group.name
    %p.main-member-name
      - @group.members.each do |member|
        = member.user.name
    .edit Edit
  .content-main
    = render partial: 'message', collection: @messages
      
  .content-footing
    .input-area
      =form_for [@group, @message] do |f|
        .input-box
          = f.text_field :body, placeholder: 'メッセージを入力してください', style: "border: none", id: 'new-message'
          = f.label :image, id: 'new-message' do
            %i.fas.fa-image
            = f.file_field :image, style: 'display:none'
        .send
          = f.submit value: 'Send', class: 'send-button', style: 'border: none'
= render partial: 'groups/sideblock'